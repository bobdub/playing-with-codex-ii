#!/usr/bin/env sh
set -e
DIR="$(cd "$(dirname "$0")" && pwd)"
WRAPPER_JAR="$DIR/gradle/wrapper/gradle-wrapper.jar"

if [ -f "$WRAPPER_JAR" ]; then
  CLASSPATH="$WRAPPER_JAR"
  JAVA_CMD=${JAVA_HOME:+"$JAVA_HOME/bin/java"}
  JAVA_CMD=${JAVA_CMD:-java}
  exec "$JAVA_CMD" -Xmx64m -Xms64m -classpath "$CLASSPATH" org.gradle.wrapper.GradleWrapperMain "$@"
fi

echo "Gradle wrapper JAR not found. Install Gradle 8.7+ and run 'gradle wrapper' inside the android/ directory to generate the wrapper files." >&2
if command -v gradle >/dev/null 2>&1; then
  echo "Falling back to invoking the system Gradle." >&2
  exec gradle "$@"
fi
exit 1
